name: model_training

entry_points:
  main:
    parameters:
      input_path:
        description: Path to engineered features parquet file
        type: str
      model_path:
        description: Path where trained model will be saved
        type: str
      encoders_path:
        description: Path to label encoders from feature engineering
        type: str
      config_path:
        description: Path to training configuration YAML
        type: str

    command: >
      python main.py --input_path {input_path} \
                     --model_path {model_path} \
                     --encoders_path {encoders_path} \
                     --config_path {config_path}
